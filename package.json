	"dependencies": {
		"body-parser": "~1.10.2",
		"cookie-parser": "~1.3.3",
		"debug": "~2.1.1",
		"ejs": "~2.2.3",
		"express": "~4.11.1",
		"less-middleware": "1.0.x",
	    "mongoose": "^3.8.17",
	    "node-jsx": "~0.11.0",
    	"react": "~0.12.2",
		"morgan": "~1.5.1",
		"material-ui": "^0.7.0",
		"serve-favicon": "~2.2.0"
	},
	"devDependencies": {
		"browserify": "~6.0.3",
    	"nodemon": "^1.2.1",
		"reactify": "~0.14.0",
		"uglify-js": "~2.4.15",
		"watchify": "~2.0.0",
		"autoless": "^0.1.6"
	},
	"browserify": {
		"transform": [
		  "reactify"
		]
